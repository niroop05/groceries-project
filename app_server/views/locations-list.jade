extends layout
include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      //h1= pageHeader.title
      small.tagline #{pageHeader.strapline}

  .row
    .col-12.col-md-8
      each location in locations
        .card
          .card-block
            h4
              // Use the single location iteration here
              a.locName(href=`/location/${location.name.replace(/\s+/g, '-').toLowerCase()}`)= location.name
            
            // Output the rating
            +outputRating(location.rating)
            span.badge.badge-pill.badge-default.float-right= location.distance
            p.address= location.address
            .facilities
              each facility in location.facilities
                span.badge.badge-warning= facility

    .col-12.col-md-4
      p.lead= sidebar
